<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clouds"
    android:orientation="vertical"
    tools:context=".DashBoard.Police.HomeOwnerFormListFragment">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/text_background"
        android:gravity="center"
        android:text="Home Owner Form List"
        android:textColor="@color/white"
        android:textSize="25sp" />


    <Spinner
        android:id="@+id/verification_status_sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_margin="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/spinner_background"
        android:entries="@array/verification_status_array"
        android:padding="10dp" />

    <EditText
        android:layout_below="@id/verification_status_sp"
        android:id="@+id/search_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/white"
        android:gravity="center"
        android:hint="Search Here"
        android:padding="16dp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_owner_from_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_below="@id/search_et"
        />

</RelativeLayout>